{% extends "layout.njk" %}

{% block content %}
  <div class="container">
    <div class="row">
        {% for element in productsList %}
      <div class="col-sm-12 col-md-6 col-lg-3">
        <div class="card border-dark mb-3">
          <img src={{element.image}}>
          <h6><a href="/products/{{element.idProduct}}">{{element.name}}</a></h6>
        </div>
      </div>
        {% endfor  %}
    </div>
  </div>
{% endblock %}
